block variables
doctype html
html
  head
    meta(charset="utf-8")
    title #{title} | Startup Repeat
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description", content="This is Paul's blog/portfolio page")
    meta(name="author", content="Robert Paul Trettenero")
    link(rel="shortcut icon", href="/favicon.ico")
    // Linking Fonts
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto&display=swap")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&display=swap")
    // Linking Style.css
    link(rel="stylesheet", href="/css/style.css")
    // Add title icon
    link(rel = "icon" href="/images/title_circle.png" type = "image/x-icon")
  body
    div(class="site-wrapper")
      nav(class="head-foot site-nav")
        div(class="logo")
          a(class="" href="/"): h4 Startup Repeat
        ul(class="nav-links")
          li
            a(class="" href="/programming") Programming
          li
            a(class="" href="/reviews") Media Reviews
          li
            a(class="" href="/music") Music
          li
            a(class="" href="/random") Random
          li
            a(class="" href="/about") About/Contact
        div(class="push-burger")
          div(class="burger")
            div(class="line1")
            div(class="line2")
            div(class="line3")
      // end of nav
      img(class="h-trapezoid" src="/images/head.svg" alt="A black trapezoid in the background")
      img(class="h-circles" src="/images/headCircles.svg" alt="Faded yellow circles in the background")
      
      block home
      block programming
      block reviews
      block music
      block random
      block about
      block article

      div(class="above-foot")
        img(class="f-circles" src="/images/footCircles.svg" alt="Faded yellow circles in the background")
        a(class="" href="/"): img(class="foot-logo" src="/images/LOGO.png" alt="Startup Repeat Logo" width="250" height="250")
        img(class="f-trapezoid" src="/images/foot.svg" alt="A black trapezoid in the background")
        div(class="foot-text") &copy; 2021-2022
      footer(class="head-foot site-foot")
        ul
          a(class="foot-text" href="/programming") Programming
        ul
          a(class="foot-text" href="/reviews") Media Reviews
        ul
          a(class="foot-text" href="/music") Music
        ul
          a(class="foot-text" href="/random") Random
        ul
          a(class="foot-text" href="/about") About/Contact
      // Placed at the end of the document so the pages load faster
      // Linking jQuery
      script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
      // Linking app.js
      script(type="text/javascript" src="/javascript/app.js")
